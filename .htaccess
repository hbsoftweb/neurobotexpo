# Force HTTPS
RewriteEngine On
RewriteCond %{HTTPS} !=on
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]

<IfModule mod_headers.c>
  # Security headers
  Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
  Header always set X-Content-Type-Options "nosniff"
  Header always set X-Frame-Options "SAMEORIGIN"
  Header always set Referrer-Policy "strict-origin-when-cross-origin"

  # âœ… Allow camera for this origin; keep mic/geo denied
  Header always set Permissions-Policy "camera=(self), microphone=(), geolocation=()"

  # (Optional legacy) Some older browsers still read Feature-Policy
  # Header always set Feature-Policy "camera 'self'; microphone 'none'; geolocation 'none'"
</IfModule>
